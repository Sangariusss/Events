<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_publish_corner_radius" />
            <solid android:color="@color/blue_50" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_publish_corner_radius" />
            <solid android:color="@color/blue_50" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_publish_corner_radius" />
            <solid android:color="@color/blue_60" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_publish_corner_radius" />
            <solid android:color="@color/neutral_80" />
        </shape>
    </item>
</selector>