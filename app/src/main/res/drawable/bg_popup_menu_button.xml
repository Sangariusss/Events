<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_98" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="@dimen/button_popup_menu"
                android:bottomRightRadius="@dimen/button_popup_menu" />
        </shape>
    </item>
    <item android:state_hovered="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_98" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="@dimen/button_popup_menu"
                android:bottomRightRadius="@dimen/button_popup_menu" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_100" />
            <corners android:radius="@dimen/button_popup_menu" />
        </shape>
    </item>
</selector>