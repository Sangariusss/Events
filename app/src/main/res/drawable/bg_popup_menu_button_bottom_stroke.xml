<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neutral_98" />
                    <corners
                        android:topLeftRadius="@dimen/button_popup_menu"
                        android:topRightRadius="@dimen/button_popup_menu"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp" />
                </shape>
            </item>
            <item android:gravity="fill_horizontal|bottom">
                <shape android:shape="rectangle">
                    <size android:height="1dp" />
                    <solid android:color="@color/neutral_90" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_hovered="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neutral_98" />
                    <corners
                        android:topLeftRadius="@dimen/button_popup_menu"
                        android:topRightRadius="@dimen/button_popup_menu"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp" />
                </shape>
            </item>
            <item android:gravity="fill_horizontal|bottom">
                <shape android:shape="rectangle">
                    <size android:height="1dp" />
                    <solid android:color="@color/neutral_90" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/neutral_100" />
                    <corners android:radius="@dimen/button_popup_menu" />
                </shape>
            </item>
            <item android:gravity="fill_horizontal|bottom">
                <shape android:shape="rectangle">
                    <size android:height="1dp" />
                    <solid android:color="@color/neutral_90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>