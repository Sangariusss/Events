<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp">

    <TextView
        android:id="@+id/menu_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/fixel_medium"
        android:gravity="center"
        android:background="@drawable/bg_popup_menu_button_bottom_stroke"
        android:text="@string/edit"
        android:textColor="@color/neutral_0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_delete" />

    <TextView
        android:id="@+id/menu_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/fixel_medium"
        android:gravity="center"
        android:background="@drawable/bg_popup_menu_button"
        android:text="@string/delete"
        android:textColor="@color/red_50"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/menu_edit"
        app:layout_constraintStart_toStartOf="@id/menu_edit"
        app:layout_constraintTop_toBottomOf="@id/menu_edit"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>